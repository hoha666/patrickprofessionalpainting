@{
    ViewData["Title"] = "Brands & Materials We Use";
}

<div id="content">
    <div class="container container--is-maxwidth">
        <section class="container hero hero--stage hero--bottom hero--left" v-heroanim>

            <responsive-image class="image image--hero hero__image">
                <video-lazy>
                    <video controls="controls" autoplay loop muted playsinline>
                        <source src="~/video/brands/Db2-1.m4v" type="video/mp4" />
                    </video>
                </video-lazy>
                <!-- Accessibility -->
                @*<img src="~/images/cb1.jpg" alt="" class="image image--hero hero__image">*@
            </responsive-image>

            <div class="hero__container container--medium">
                <div class="hero__content" data-tag-wrapper>
                    <h1 class="hero__title halesworth">
                        Our top brands and materials that we use in our projects
                    </h1>
                </div>
            </div>
        </section>

        <div class="container--large ">
            <div class="container--medium">

                <div class="copy-block container--small content" v-animate="{ cssClass: 'fadein--bottom' }">
                    <div class="copy-block__title copy-block--fullwidth">
                        <p class="heading--2 --serif">
                        </p>
                    </div>
                </div>
            </div>
        </div>


        <div class="container--large ">
            <scroll-slider class="scroll-slider--advanced" close-text="Close">
                <div slot="sidecontent">
                    <h2 class="scroll-slider__heading">
                        <span class="scroll-slider__sub-title halesworth">Discover</span> <span class="scroll-slider__title">Top Wordlwide Brands and Materials</span>
                    </h2>
                    <section>
                        <p>Dulux Paints</p>
                        <p>Tubman Paints</p>
                        <p>Whattyl Paints</p>
                        <p>Haymes Paints</p>
                    </section>
                </div>
            </scroll-slider>
        </div>


    </div>

</div>
